    // "editor.minimap.enabled": false,                // Disable minimap
    // "editor.renderWhitespace": "selection",         // Options: "none", "boundary", "selection", "trailing", "all"
    // "editor.wordWrap": "on",                        // Options: "off", "on", "wordWrapColumn", "bounded"
    
    // --- Theme & Colors ---
    // "workbench.colorTheme": "One Dark Pro",         // Options: any installed theme
    // "workbench.iconTheme": "material-icon-theme",   // Options: any installed icon theme
    
    // --- Files & Saving ---
    // "files.autoSave": "afterDelay",                 // Options: "off", "afterDelay", "onFocusChange", "onWindowChange"
    // "files.autoSaveDelay": 1000,                    // Delay in ms (when autoSave is "afterDelay")
