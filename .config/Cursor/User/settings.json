{
    // ===== WINDOW & LAYOUT =====
    "window.commandCenter": true,
    "workbench.sideBar.location": "left",
    "workbench.panel.defaultLocation": "bottom",
    "workbench.activityBar.location": "default",
    "workbench.statusBar.visible": true,

    // ===== CURSOR AI SETTINGS =====
    // Default model for non-auto mode
    "cursor.chat.defaultModel": "claude-4-opus",
    "cursor.composer.defaultModel": "claude-4-opus",
    
    // Chat panel position
    "cursor.chat.smoothStreaming": true,
    "cursor.chat.showSuggestedFiles": true,

    // ===== CURSOR QUOTA CHECKER (install extension first) =====
    // Updates on every request with 1-second fallback
    "cursorQuotaChecker.updateInterval": 1,
    "cursorQuotaChecker.showInStatusBar": true,
    "cursorQuotaChecker.showTooltip": true,

    // ===== ELIXIR FORMAT ON SAVE =====
    // Runs `mix format` on .ex and .exs files when saving
    "[elixir]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "elixir-lsp.elixir-ls",
        "editor.tabSize": 2
    },
    // ElixirLS settings for formatting
    "elixirLS.mixEnv": "dev",
    "elixirLS.projectDir": "",
    "elixirLS.fetchDeps": false,

    // ===== GIT SETTINGS =====
    "git.autofetch": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "gitlens.currentLine.enabled": true,
    "gitlens.hovers.currentLine.over": "line",
    "gitlens.codeLens.enabled": true

    // ===== SUGGESTED OPTIONS (uncomment to enable) =====
    
    // --- Editor Appearance ---
    // "editor.fontSize": 14,                          // Options: 10-24
    // "editor.fontFamily": "Fira Code, Menlo, Monaco, monospace",
